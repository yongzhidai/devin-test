{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "src"]
}
